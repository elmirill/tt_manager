= form_for @train do |f|
  - if @train.errors.any?
    #error_explanation
      h2= "#{pluralize(@train.errors.count, "error")} prohibited this train from being saved:"
      ul
        - @train.errors.full_messages.each do |msg|
          li= msg

  .field
    = f.label :number
    = f.text_field :number
  .actions
    = f.submit 'Save'
